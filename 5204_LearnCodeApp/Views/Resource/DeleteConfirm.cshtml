@model _5204_LearnCodeApp.Models.ResourceDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Confirmation</h2>

<h3>Are you sure you want to delete this resource?</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ResourceTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResourceTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResourceDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ResourceDescription)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Resource", new { id = Model.ResourceID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>

